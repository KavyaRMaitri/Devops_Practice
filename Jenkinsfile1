pipeline {
    agent any
    
    environment {
        // Define environment variables to store secret values
        secret1 = credentials('secret1')
        secret1 = credentials('secret2')
    }
    
    stages {
        stage('Stage 2') {
            steps {
               withCredentials([string(credentialsId: 'secret1', variable: 'secret1'), string(credentialsId: 'secret2', variable: 'secret2')]) {
               sh ('S1.py ${secret1} ${secret2}')
}
}
}
}
}
